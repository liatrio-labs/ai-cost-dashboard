# AI Cost Dashboard - Backend Production Environment Variables
# Copy this file to .env in production and fill in the values

# ============================================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================================
# Get these from Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ============================================================================
# SECURITY (Required)
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-byte-base64-encryption-key

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ============================================================================
# API KEYS (Optional - for testing only)
# ============================================================================
# NOTE: In production, API keys are stored encrypted in the database
# These variables are only used for local testing
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-proj-your-key-here

# ============================================================================
# SCHEDULER CONFIGURATION (Optional)
# ============================================================================
# These can be customized if needed
ANTHROPIC_COLLECTION_CRON=5 * * * *
OPENAI_COLLECTION_CRON=10 0,6,12,18 * * *
AGGREGATE_REFRESH_INTERVAL=15
FORECASTING_CRON=0 0 * * *

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Enable/disable features
ENABLE_SCHEDULER=true
ENABLE_FORECASTING=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file with actual values to Git
# 2. Use environment variables in Render dashboard for production
# 3. Rotate encryption key periodically
# 4. Keep service role key secret (never expose to frontend)
# 5. Monitor logs for any exposed secrets
